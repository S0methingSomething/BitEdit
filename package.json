{
  "name": "bitedit",
  "version": "1.0.0",
  "description": "A web-based editor for viewing, modifying, and patching MonetizationVars files for BitLife.",
  "main": "dist/index.html",
  "scripts": {
    "build:ts": "tsc",
    "build:css": "tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "build:static": "copyfiles -u 1 public/**/* dist",
    "build": "npm run build:ts && npm run build:css && npm run build:static",
    "watch:ts": "tsc --watch",
    "watch:css": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "dev": "concurrently \"npm:watch:*\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/S0methingSomething/BitEdit.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/S0methingSomething/BitEdit/issues"
  },
  "homepage": "https://github.com/S0methingSomething/BitEdit#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.1.2",
    "copyfiles": "^2.4.1",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5"
  }
}

